FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


isoAdvection 1;
application     multiRegionPhaseChangeFlow;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         5e-7;

deltaT          1e-7;

writeControl    adjustableRunTime;

writeInterval   1e-7;

purgeWrite      1;

writeFormat     ascii;

writePrecision  8;

writeCompression off;

timeFormat      general;

timePrecision   10;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           0.1;
maxAlphaCo      0.1;
maxCapillaryNum 1e8;
maxDi           10;
// needed for the explicit time step criteria of explicitGrad
maxDeltaT       1e-1;
// requires for accurate results of the explicit scheme
//maxDeltaT       1e-4;

functions
{

    massFlux
    {
        type            volFieldValue;
        libs            ("libfieldFunctionObjects.so");

        writeControl    timeStep;
        writeInterval   10;
        writeFields     false;
        log             true;
        region          fluid;

        operation       volIntegrate;

        fields
        (
            psi0_
        );

    }

    energyFluxes
    {
        type            interfaceEnergyFluxes;
        libs            ("libpostProcess.so");

        // Write at same frequency as fields
        writeControl    timeStep;
        writeInterval   1;
        region fluid;
    }

    // writeSigma
    // {
